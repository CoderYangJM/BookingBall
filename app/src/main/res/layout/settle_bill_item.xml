<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/shape_button"
    app:cardCornerRadius="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/settle_select_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-20dp"
            android:layout_marginRight="-20dp"
            android:gravity="center_horizontal"
            android:paddingLeft="0dp"
            android:paddingBottom="0dp"
            android:text="..." />

        <TextView
            android:id="@+id/settle_name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="对象："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/settle_total_item"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:text="金额："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/settle_type_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settle_name_item"
            android:text="类型："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/settle_create_date_item"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settle_total_item"
            android:layout_alignParentRight="true"
            android:text="创建日期："
            android:textSize="18sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>